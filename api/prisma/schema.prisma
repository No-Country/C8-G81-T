// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model Patiens {
  id Int @id @default(autoincrement())
  dni Int
  firstname String
  lastname String
  email String @unique
  password String
  phone String
  status Boolean @default(true)
}

model Doctors {
  id Int @id @default(autoincrement())
  dni Int
  firstname String
  lastname String
  specialty String
  email String @unique
  password String
  phone String
  role    Role     @default(AVAILIBLE)
}

enum Role {
  OCUCUPIED
  AVAILIBLE
}